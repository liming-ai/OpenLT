{
    "name": "LWS_CosLR_10e_base_R32_CE_Linear_classifier_StepLR_160_180_StandardAug_128_0.1_5e-4_200e",
    "n_gpu": 1,

    "arch": {
        "type": "ResNet32Model",
        "args": {
            "num_classes": 100,
            "reduce_dimension": false,
            "classifier": "LWS",
            "use_norm": false,
            "num_experts": 1
        }
    },
    "data_loader": {
        "type": "ImbalanceCIFAR100DataLoader",
        "args":{
            "data_dir": "data",
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 1,
            "imb_factor": 0.01,
            "balanced": true
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.1,
            "weight_decay": 5e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "add_extra_info": false,
    "loss": {
        "type": "CrossEntropyLoss",
        "args": {

        }
    },
    "resume_state_dict_only": false,
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 10,
            "eta_min": 0.0
        }
    },
    "trainer": {
        "epochs": 10,
        "val_start_epoch": 0,
        "save_dir": "saved/CIFAR100/LT_100",
        "save_period": 10,
        "verbosity": 2,

        "monitor": "max val_accuracy",
        "tensorboard": true
    }
}
