{
    "name": "ImageNet_LT_ResNeXt50_RIDE",
    "n_gpu": 3,

    "arch": {
        "type": "ResNeXt50Model",
        "args": {
            "num_classes": 1000,
            "reduce_dimension": true,
            "classifier": "cosine",
            "use_norm": true,
            "returns_feat": true,
            "num_experts": 3
        }
    },
    "data_loader": {
        "type": "ImageNetLTDataLoader",
        "args":{
            "data_dir": "data/ImageNet_LT",
            "batch_size": 256,
            "shuffle": true,
            "num_workers": 16
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.1,
            "weight_decay": 2e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "add_extra_info": true,
    "loss": {
        "type": "RIDELoss",
        "args": {
            "reweight": true,
            "reweight_factor": 0.02,
            "reweight_epoch": 80
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "CustomLR",
        "args": {
            "step1": 60,
            "step2": 80,
            "gamma": 0.1,
            "warmup_epoch": 5
        }
    },
    "trainer": {
        "epochs": 100,
        "val_start_epoch": 0,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "max val_accuracy",
        "tensorboard": true
    }
}
